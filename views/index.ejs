<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>AI Stock Predictor</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script type="module" src="https://unpkg.com/@splinetool/viewer@1.10.38/build/spline-viewer.js"></script>
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #000000;
      margin: 0;
      padding: 0;
      color: #1f2937;
    }

    .container {
      max-width: 1200px;
      margin: auto;
      padding: 2rem;
    }

    header {
      text-align: center;
      margin-bottom: 2rem;
    }

    h1 {
      font-size: 2.5rem;
      color: #2563eb;
    }

    form {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    input[type="text"] {
      padding: 0.75rem;
      width: 300px;
      font-size: 1rem;
      border: 2px solid #d1d5db;
      border-radius: 0.5rem;
    }

    button {
      background-color: #2563eb;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #1d4ed8;
    }

    .error {
      background-color: #fee2e2;
      color: #b91c1c;
      padding: 1rem;
      border-left: 4px solid #b91c1c;
      border-radius: 0.5rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .card {
      background: rgba(15, 23, 42, 0.8);
      border-radius: 20px;
      padding: 2rem;
      box-shadow: 0 20px 60px rgba(15, 23, 42, 0.45);
      border: 1px solid rgba(148, 163, 184, 0.15);
      backdrop-filter: blur(18px);
      color: #f8fafc;
    }

    .card h2 {
      margin-bottom: 0.5rem;
      color: #e0e7ff;
    }

    .results-layout {
      display: grid;
      grid-template-columns: minmax(0, 1.15fr) minmax(0, 0.85fr);
      gap: 1.75rem;
      margin-bottom: 2rem;
      animation: fadeSlideUp 0.9s ease forwards;
      opacity: 0;
    }

    .prediction-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.25rem;
      margin-bottom: 1.5rem;
    }

    .prediction-item {
      background: rgba(15, 23, 42, 0.65);
      border: 1px solid rgba(37, 99, 235, 0.25);
      padding: 1.25rem;
      border-radius: 16px;
      position: relative;
      overflow: hidden;
    }

    .prediction-item::after {
      content: "";
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at top, rgba(37, 99, 235, 0.15), transparent 65%);
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .prediction-item strong {
      display: block;
      color: #94a3b8;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }

    .prediction-item p {
      font-size: 1.6rem;
      font-weight: 700;
      color: #f1f5f9;
      margin: 0.25rem 0 0;
    }

    .prediction-item:hover::after {
      opacity: 1;
    }

    .panel-header {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }

    .eyebrow {
      color: #94a3b8;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.18em;
    }

    .stat-chips {
      display: flex;
      flex-wrap: wrap;
      gap: 0.65rem;
    }

    .stat-chip {
      padding: 0.45rem 0.9rem;
      border-radius: 999px;
      background: rgba(37, 99, 235, 0.12);
      color: #bfdbfe;
      font-size: 0.85rem;
      border: 1px solid rgba(59, 130, 246, 0.3);
    }

    .stat-chip.positive {
      background: rgba(16, 185, 129, 0.12);
      color: #6ee7b7;
      border-color: rgba(16, 185, 129, 0.3);
    }

    .stat-chip.negative {
      background: rgba(248, 113, 113, 0.12);
      color: #fecaca;
      border-color: rgba(239, 68, 68, 0.35);
    }

    .confidence-meter {
      margin-top: 1.5rem;
      padding: 1.25rem;
      border-radius: 16px;
      border: 1px solid rgba(148, 163, 184, 0.2);
      background: rgba(15, 23, 42, 0.55);
    }

    .confidence-label {
      display: flex;
      justify-content: space-between;
      font-size: 0.85rem;
      color: #94a3b8;
      margin-bottom: 0.75rem;
    }

    .confidence-bar {
      height: 10px;
      border-radius: 999px;
      background: rgba(51, 65, 85, 0.7);
      overflow: hidden;
    }

    .confidence-bar span {
      display: block;
      height: 100%;
      background: linear-gradient(90deg, #2563eb, #7c3aed);
      width: 0;
      animation: fillBar 1.4s ease forwards;
    }

    .chart-panel {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .chart-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .chart-summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 1rem;
    }

    .chart-summary span {
      font-size: 0.85rem;
      color: #a5b4fc;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }

    .chart-summary strong {
      display: block;
      font-size: 1.25rem;
      color: #f8fafc;
    }

    canvas {
      margin-top: 2rem;
    }

    .news-section {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      animation: fadeSlideUp 1s ease forwards;
      opacity: 0;
    }

    .news-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1rem;
    }

    .news-card {
      position: relative;
      padding: 1.5rem;
      border-radius: 18px;
      background: rgba(15, 23, 42, 0.6);
      border: 1px solid rgba(148, 163, 184, 0.2);
      transition: transform 0.3s ease, border-color 0.3s ease;
      min-height: 160px;
    }

    .news-card::before {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: inherit;
      padding: 1px;
      background: linear-gradient(120deg, rgba(37, 99, 235, 0.4), rgba(124, 58, 237, 0.4));
      -webkit-mask: 
        linear-gradient(#fff 0 0) content-box, 
        linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .news-card:hover {
      transform: translateY(-6px);
      border-color: rgba(59, 130, 246, 0.45);
    }

    .news-card:hover::before {
      opacity: 0.8;
    }

    .news-card h4 {
      margin: 0 0 0.75rem;
      color: #e0e7ff;
    }

    .news-meta {
      font-size: 0.85rem;
      color: #94a3b8;
      margin-bottom: 0.5rem;
    }

    .news-link {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      color: #60a5fa;
      text-decoration: none;
      font-weight: 600;
    }

    .news-link svg {
      width: 16px;
      height: 16px;
    }

    .news-link:hover {
      text-decoration: underline;
    }
    .micro-trend-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 0.75rem;
      margin-top: 1.25rem;
    }

    .micro-trend {
      padding: 0.9rem 1rem;
      border-radius: 12px;
      background: rgba(37, 99, 235, 0.08);
      border: 1px dashed rgba(59, 130, 246, 0.4);
      font-size: 0.9rem;
      color: #bfdbfe;
    }

    .micro-trend strong {
      display: block;
      color: #e0e7ff;
    }

    .results-divider {
      height: 1px;
      width: 100%;
      background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.35), transparent);
      margin: 2.5rem 0;
    }

    @keyframes fadeSlideUp {
      0% {
        opacity: 0;
        transform: translateY(25px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fillBar {
      to {
        width: var(--confidence-width, 60%);
      }
    }

    .card[data-animate],
    .results-layout,
    .news-section {
      will-change: transform, opacity;
    }

    @media (max-width: 1024px) {
      .results-layout {
        grid-template-columns: 1fr;
      }
      .container {
        padding: 1.5rem;
      }
    }

    @media (max-width: 640px) {
      .card {
        padding: 1.5rem;
      }
      .stat-chips {
        flex-direction: column;
      }
      .tradevision-subtitle {
        font-size: 2.8rem;
      }
    }
    .brain-3d{
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 1200px;
      height: 1000px;
      z-index: 1;
    }

    .voice-input-container {
      position: absolute;
      top: 30%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 25;
      background: rgba(30, 41, 59, 0.55);
      border-radius: 25px;
      padding: 10px 10px;
      backdrop-filter: blur(16px) saturate(180%);
      border: 1.5px solid rgba(255, 255, 255, 0.18);
      min-width: 300px;
      box-shadow: 0 8px 32px 0 rgba(0,0,0,0.25);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .voice-input {
      display: flex;
      align-items: center;
      gap: 15px;
      width: 100%;
    }

    .voice-input input {
      flex: 1;
      background: transparent;
      border: none;
      color: white;
      font-size: 18px;
      outline: none;
      padding: 10px 0;
      letter-spacing: 0.5px;
    }

    .voice-input input::placeholder {
      color: rgba(255, 255, 255, 0.7);
      font-size: 16px;
    }

    .search-btn {
      background: #2563eb;
      color: white;
      border: none;
      border-radius: 20px;
      padding: 12px 24px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px 0 rgba(37,99,235,0.15);
      min-width: 80px;
    }

    .search-btn:hover {
      background: #1d4ed8;
      transform: scale(1.05);
    }

    .search-button {
      background: #2563eb;
      color: #fff;
      border: none;
      border-radius: 12px;
      padding: 15px 28px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s, transform 0.2s;
      box-shadow: 0 2px 8px 0 rgba(37,99,235,0.15);
    }
    .search-button:hover {
      background: #1d4ed8;
      transform: scale(1.05);
    }

    /* TradeVision AI Section Styles */
    .tradevision-container {
      position: absolute;
      top: 60%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 25;
      text-align: center;
      min-height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .tradevision-content {
      text-align: center;
      z-index: 10;
      position: relative;
    }

    .tradevision-title {
      font-size: 1.5rem;
      font-weight: 400;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 0.5rem;
      letter-spacing: 2px;
    }

    .tradevision-subtitle {
      font-size: 4rem;
      font-weight: 700;
      color: #c0c0c0;
      margin-bottom: 2rem;
      text-shadow: 0 0 20px rgba(192, 192, 192, 0.5);
      background: linear-gradient(45deg, #c0c0c0, #e0e0e0, #a0a0a0);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .tradevision-search-container {
      position: relative;
      display: inline-block;
    }

    .tradevision-search-form {
      display: flex;
      align-items: center;
      background: rgba(0, 0, 0, 0.6);
      border-radius: 30px;
      padding: 15px 20px;
      border: 2px solid rgba(37, 99, 235, 0.3);
      backdrop-filter: blur(20px);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
      position: relative;
    }

    .tradevision-search-form::before {
      content: '';
      position: absolute;
      top: -2px;
      left: -2px;
      right: -2px;
      bottom: -2px;
      background: linear-gradient(45deg, #2563eb, #7c3aed, #2563eb);
      border-radius: 30px;
      z-index: -1;
      opacity: 0.3;
      animation: borderGlow 3s ease-in-out infinite;
    }

    @keyframes borderGlow {
      0%, 100% { opacity: 0.3; }
      50% { opacity: 0.6; }
    }

    .tradevision-search-form input {
      background: transparent;
      border: none;
      color: white;
      font-size: 16px;
      outline: none;
      padding: 10px 0;
      min-width: 300px;
      margin-right: 15px;
    }

    .tradevision-search-form input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .tradevision-background {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 1;
    }

    .particle-ring {
      position: absolute;
      border: 1px solid rgba(37, 99, 235, 0.3);
      border-radius: 50%;
      animation: rotate 20s linear infinite;
    }

    .ring-1 {
      width: 200px;
      height: 200px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border-color: rgba(37, 99, 235, 0.2);
    }

    .ring-2 {
      width: 300px;
      height: 300px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border-color: rgba(124, 58, 237, 0.2);
      animation-direction: reverse;
      animation-duration: 15s;
    }

    .ring-3 {
      width: 400px;
      height: 400px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border-color: rgba(59, 130, 246, 0.2);
      animation-duration: 25s;
    }

    @keyframes rotate {
      from { transform: translate(-50%, -50%) rotate(0deg); }
      to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    /* Loading Animation Styles */
    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 4px solid rgba(37, 99, 235, 0.3);
      border-top: 4px solid #2563eb;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .loading-text {
      color: white;
      font-size: 18px;
      font-weight: 500;
      letter-spacing: 1px;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 0.7; }
      50% { opacity: 1; }
    }
  </style>
</head>
<body>
  <div class="container">
    

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <% if (typeof searched !== 'undefined' && searched) { %>
      <div class="results-layout" data-animate>
        <div class="insights-panel card" data-animate>
          <div class="panel-header">
            <span class="eyebrow">Analysis Overview</span>
            <div>
              <h2>Insights for <%= (searched.symbol || '').toUpperCase() %></h2>
              <p style="color:#94a3b8; margin:0;">Live market intelligence generated in real time.</p>
            </div>
            <div class="stat-chips">
              <span class="stat-chip">Math Model: $<%= searched.mathPrediction ? Number(searched.mathPrediction).toFixed(2) : '0.00' %></span>
              <span class="stat-chip">AI Projection: $<%= searched.finalPrediction ? Number(searched.finalPrediction).toFixed(2) : '0.00' %></span>
              <span class="stat-chip <%= Number(searched.sentimentScore || 0) >= 0 ? 'positive' : 'negative' %>">
                Sentiment: <%= searched.sentimentScore ? Number(searched.sentimentScore).toFixed(2) : '0.00' %>
              </span>
            </div>
          </div>

          <div class="prediction-grid">
            <div class="prediction-item">
              <strong>Recent Price</strong>
              <p>$<%= searched.prices && searched.prices.length > 0 ? Number(searched.prices[searched.prices.length - 1]).toFixed(2) : '0.00' %></p>
              <small style="color:#94a3b8;">Last closing snapshot</small>
            </div>
            <div class="prediction-item">
              <strong>Math Prediction</strong>
              <p>$<%= searched.mathPrediction ? Number(searched.mathPrediction).toFixed(2) : '0.00' %></p>
              <small style="color:#94a3b8;">Deterministic baseline</small>
            </div>
            <div class="prediction-item">
              <strong>Sentiment Score</strong>
              <p><%= searched.sentimentScore ? Number(searched.sentimentScore).toFixed(2) : '0.00' %></p>
              <small style="color:#94a3b8;">News & social pulse</small>
            </div>
            <div class="prediction-item">
              <strong>Final Prediction</strong>
              <p>$<%= searched.finalPrediction ? Number(searched.finalPrediction).toFixed(2) : '0.00' %></p>
              <small style="color:#94a3b8;">Hybrid confidence</small>
            </div>
          </div>

          <div class="confidence-meter">
            <div class="confidence-label">
              <span>Confidence blend</span>
              <strong style="color:#e0e7ff;">
                <%= searched.finalPrediction && searched.prices && searched.prices.length > 0
                  ? (100 - Math.min(95, Math.abs((Number(searched.finalPrediction) - Number(searched.prices[searched.prices.length - 1])) / Number(searched.prices[searched.prices.length - 1]) * 100))).toFixed(0)
                  : 62 %>%
              </strong>
            </div>
            <div class="confidence-bar">
              <span style="--confidence-width:<%= searched.finalPrediction && searched.prices && searched.prices.length > 0
                ? Math.min(95, Math.max(35, 100 - Math.abs((Number(searched.finalPrediction) - Number(searched.prices[searched.prices.length - 1])) / Number(searched.prices[searched.prices.length - 1]) * 100))).toFixed(0)
                : 62 %>%;"></span>
            </div>
            <div class="micro-trend-list">
              <div class="micro-trend">
                <strong>Volatility Watch</strong>
                <span>Monitoring short-term swings for breakout patterns.</span>
              </div>
              <div class="micro-trend">
                <strong>Sentiment Drift</strong>
                <span>Media tone currently <%= Number(searched.sentimentScore || 0) >= 0 ? 'optimistic' : 'cautious' %>.</span>
              </div>
            </div>
          </div>
        </div>

        <div class="chart-panel card" data-animate>
          <div class="chart-header">
            <div>
              <span class="eyebrow">Momentum Tracker</span>
              <h3 style="margin:0; color:#e0e7ff;">Historic vs AI Trajectories</h3>
            </div>
            <div class="chart-summary">
              <div>
                <span>Range</span>
                <strong>
                  <% if (searched.prices && searched.prices.length > 0) { 
                    const minPrice = Math.min(...searched.prices.map(Number));
                    const maxPrice = Math.max(...searched.prices.map(Number));
                  %>
                  $<%= minPrice.toFixed(2) %> - $<%= maxPrice.toFixed(2) %>
                  <% } else { %>
                  N/A
                  <% } %>
                </strong>
              </div>
              <div>
                <span>Data Points</span>
                <strong><%= searched.prices && searched.prices.length ? searched.prices.length : 0 %></strong>
              </div>
            </div>
          </div>
          <canvas id="chart-<%= (searched.symbol || '').replace(/\W/g, '') %>"></canvas>
        </div>
      </div>

      <div class="results-divider"></div>

      <div class="news-section card" data-animate>
        <div class="panel-header" style="margin-bottom:0.5rem;">
          <span class="eyebrow">Signal Sources</span>
          <h3 style="margin:0;">Market-moving briefs</h3>
        </div>
        <div class="news-grid">
          <% if (searched.headlines && Array.isArray(searched.headlines) && searched.headlines.length) { %>
            <% searched.headlines.forEach(h => { %>
              <article class="news-card">
                <h4><%= h.title || 'No title' %></h4>
                <p class="news-meta"><%= h.source || 'Unknown source' %></p>
                <a class="news-link" href="<%= h.url || '#' %>" target="_blank" rel="noopener">
                  Read update
                  <svg viewBox="0 0 24 24" fill="none">
                    <path d="M7 17L17 7M17 7H9M17 7V15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              </article>
            <% }) %>
          <% } else { %>
            <p style="color:#94a3b8;">No recent headlines available. Check again shortly.</p>
          <% } %>
        </div>
      </div>

      <% // Prepare chart data as JS variables outside the <script> block %>
      <% const chartSymbol = (searched.symbol || '').replace(/\W/g, ''); %>
      <% const chartPrices = JSON.stringify(searched.prices && Array.isArray(searched.prices) ? searched.prices.map(Number) : []); %>
      <% const chartMathPrediction = searched.mathPrediction ? Number(searched.mathPrediction) : 0; %>
      <% const chartFinalPrediction = searched.finalPrediction ? Number(searched.finalPrediction) : 0; %>
      <script>
        const chartSymbol = "<%= chartSymbol %>";
        const prices = <%- chartPrices %>;
        const mathPrediction = <%= chartMathPrediction %>;
        const finalPrediction = <%= chartFinalPrediction %>;
        const ctx = document.getElementById("chart-" + chartSymbol).getContext('2d');
        const labels = prices.map((_, i) => `Day ${i + 1}`);
        const mathLine = new Array(prices.length).fill(mathPrediction);
        const finalLine = new Array(prices.length).fill(finalPrediction);

        new Chart(ctx, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [
              {
                label: 'Price History',
                data: prices,
                borderColor: '#2563eb',
                fill: true,
                backgroundColor: 'rgba(37, 99, 235, 0.1)',
              },
              {
                label: 'Math Prediction',
                data: mathLine,
                borderColor: '#f59e0b',
                borderDash: [5, 5],
              },
              {
                label: 'Final AI Prediction',
                data: finalLine,
                borderColor: '#10b981',
                borderDash: [2, 2],
